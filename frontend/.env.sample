# App Mode Configuration
# Possible values: development, production, demo
# In demo mode, authentication is disabled
VITE_APP_MODE=development

# Port Configuration
# Frontend development server port
VITE_FRONTEND_PORT=5173

# Backend server port (used for API proxy and redirect URIs)
VITE_BACKEND_PORT=8000

# Microsoft Entra ID Configuration
# Replace these values with your actual Entra ID app registration details
VITE_AZURE_CLIENT_ID=your-azure-client-id-here
VITE_AZURE_TENANT_ID=your-azure-tenant-id-here
VITE_REDIRECT_URI=http://localhost:5173
